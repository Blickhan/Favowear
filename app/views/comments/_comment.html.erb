<li id="comment-<%= comment.id %>">
	<div class="comment_wrapper">
		<div class="comment">
			
			<span><%= link_to comment.user.username, comment.user %> | <small><%= time_ago_in_words(comment.created_at) %></small></span>
			<div class="row">
			<p class="col-md-11"><%= comment.body %></p>
			

			<div class="btn-group col-md-1">
				<% if current_user?(comment.user) %>
					<%= link_to 'Delete', comment, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-default btn-danger btn-xs" %>
				<% end %>
			</div>
		</div>
	</div>
</li>

