<% provide(:title, "Edit category") %>
<h1>Update Category</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@category) do |f| %>
		  <%= render 'shared/error_messages', object: f.object %>

		  <%= f.label :name %>
		  <%= f.text_field :name, class: 'form-control' %>

		  <%= f.label :slug %>
		  <div class="input-group form-group">
		  	<span class="input-group-addon"><i>/c/</i></span><%= f.text_field :slug, class: 'form-control' %>
		  </div>

		  <%= f.label :description %>
		  <%= f.text_area :description, class: 'form-control' %>

		  <%= f.label :is_default, :class => "checkbox" do %>
		  Default<%= f.check_box :is_default, :style => "vertical-align:middle;width:20%;" %>
		  <% end %>

		  <%= f.submit "Save Changes", class: "btn btn-primary" %>
		<% end %>
  </div>
</div>