<% provide(:meta_description, "The internet's favorite things to wear. Making online shopping for clothes as easy as it gets.") %>

<div class="row"><span class="col-md-10"><h3>Posts</h3></span>
  <span class="col-md-2 pull-right">
  	<%= form_tag(fetch_posts_path, method: :get, remote: true, id: "date_filter_form") do %>
    	<div class="field">
    	<%= select_tag(:date_filter, 
    			options_for_select([['Day', 1], ['Week', 2], ['Month',3], ['Year',4], ['All Time',5]], @date_filter), 
    													onchange: "$(this.form).submit();", 
    													class: "form-control" ) %>
    	
    	</div>
  	<% end %>
  </span>
</div>
<div class="row" id="home_feed">
    <%= render 'shared/feed' %>
</div>

