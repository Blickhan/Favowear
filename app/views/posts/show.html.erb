<div class="page-header">
	<h1><small>submitted <%= time_ago_in_words(@post.created_at) %> ago by <%= link_to @post.user.username, @post.user %></small></h1>
</div>

<span class="voting">	
	<div class="btn-group">
    <%= link_to like_post_path(@post), method: :put, class: "btn btn-default btn-sm btn-warning" do %>
    	<span class="glyphicon glyphicon-chevron-up"></span>
    <% end %>
    <%= link_to dislike_post_path(@post), method: :put, class: "btn btn-default btn-sm btn-warning" do %>
    	<span class="glyphicon glyphicon-chevron-down"></span>
    <% end %>
  </div>
  <%= @post.get_upvotes.size - @post.get_downvotes.size %>
</span>

<div class="image_link_show_page"><%= image_tag(full_url(@post.image_link)) %></div>

<span style="font-size:2em;"><%= link_to "check it out", full_url(@post.buy_link), target: '_blank' %></span>

<% if current_user?(@post.user) %>
	<div class="btn-group pull-right">
		<%= link_to 'Delete', @post, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %>
	</div>
<% end %>


<h3 class="comments_title"><%= @post.comments.count %> Comments</h3>

<% if logged_in? %>
	<%= form_for [@post, @post.comments.build] do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<div class="field">
		<%= f.text_area :body, class: 'form-control' %>
	</div>
	<%= f.submit "Comment", class: "btn btn-primary" %>

	<% end %>
<% end %>


<div id="comments">
		<%= render 'shared/comments' %>
</div>

