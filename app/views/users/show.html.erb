<% provide(:title, @user.username) %>
<div class="row">
  <section class="user_info">
    <h1>
      <%= @user.username %>
    </h1>
  </section>
</div>
<div class="row">
  <% if @user.posts.any? %>
    <h3>Posts (<%= @user.posts.count %>)</h3>
    <ol class="posts">
      <%= render @posts %>
    </ol>
    <%= will_paginate @posts %>
  <% end %>
</div>
