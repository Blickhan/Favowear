<header class="navbar navbar-fixed-top navbar-default">
  <div class="container-fluid">
    <nav>
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <i class="fa fa-bars fa-2x" id="nav-toggle-button" aria-hidden="true"></i>                       
      </button>
      <%= link_to image_tag("favicon-32x32.png"), root_path, id: "logoimage", class: "navbar-brand" %>
    <!--<%= link_to "Favowear", root_path, id: "logo" %>-->
    </div>
      <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Categories", categories_path %></li>
          <!--<li><%= link_to "Help", help_path %></li>-->
          <% if logged_in? %>
            <li><%= link_to "Post", new_post_path %></li>
            
            <% if current_user.admin? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Admin <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Users", users_path %></li>
              </ul>
            </li>
            <% end %>

            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.username %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Log out", logout_path, method: "delete" %>
                </li>
              </ul>
            </li>

          <% else %>
            <li><%= link_to "Log in", login_path %></li>
            <li><%= link_to "Register", signup_path %></li>          
          <% end %>
        </ul>
      </div>
    </nav>
  </div>
</header>