<header class="navbar navbar-fixed-top navbar-default">
  <div class="container-fluid">
    <nav>
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <i class="fa fa-bars fa-2x" id="nav-toggle-button" aria-hidden="true"></i>                       
      </button>
      <%= link_to image_tag("favicon-32x32.png"), root_path, id: "logoimage", class: "navbar-brand" %>
      <%= link_to "Favowear", root_path, id: "logo" %>
    </div>
      <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav navbar-right">
          <li class="<%= 'active' if current_page?(root_path) %>"><%= link_to root_path do %><i class="nav-icon fa fa-home fa-2x" aria-hidden="true"></i> <span class="nav-text">Home</span><% end %></li>
          <li class="<%= 'active' if current_page?(categories_path) %>"><%= link_to categories_path do %><i class="nav-icon fa fa-tags fa-2x" aria-hidden="true"></i> <span class="nav-text">Categories</span><% end %></li>
          <!--<li><%= link_to "Help", help_path %></li>-->
          <% if logged_in? %>
            <li class="<%= 'active' if current_page?(new_post_path) %>"><%= link_to new_post_path do %><i class="nav-icon fa fa-send fa-2x" aria-hidden="true"></i> <span class="nav-text">Post</span><% end %></li>
            
            <% if current_user.admin? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <i class="nav-icon fa fa-unlock fa-2x" aria-hidden="true"></i> <span class="nav-text">Admin <b class="caret"></b></span>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Users", users_path %></li>
              </ul>
            </li>
            <% end %>

            <li class="dropdown <%= 'active' if current_page?(current_user) || current_page?(edit_user_path(current_user)) %>">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <i class="nav-icon fa fa-user fa-2x" aria-hidden="true"></i> <span class="nav-text"><%= current_user.username %> <b class="caret"></b></span>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Log out", logout_path, method: "delete" %>
                </li>
              </ul>
            </li>

          <% else %>
            <li class="<%= 'active' if current_page?(login_path) %>"><%= link_to login_path do %><i class="nav-icon fa fa-sign-in fa-2x" aria-hidden="true"></i> <span class="nav-text">Sign in</span><% end %></li>
            <li class="<%= 'active' if current_page?(signup_path) %>"><%= link_to signup_path do %><i class="nav-icon fa fa-pencil-square-o fa-2x" aria-hidden="true"></i> <span class="nav-text">Sign up</span><% end %></li>          
          <% end %>
        </ul>
      </div>
    </nav>
  </div>
</header>